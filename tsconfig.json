{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true
    },
    "include": ["module.d.ts", "forge.env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
